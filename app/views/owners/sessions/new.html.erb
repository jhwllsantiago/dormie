<div class="container-fluid bg-p-options h-custom mb-custom d-flex align-items-center justify-content-center">
  <div class="form shadow-lg p-5">
    <h3 class="text-center monsterrat heading-color semiBold mb-4">PARTNER LOGIN PORTAL</h3>
    <%# <h6 class="text-center quicksand grey" style="margin-bottom: 50px;">hello again!</span></h6> %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-floating mb-3">
        <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true, autocomplete: "email" %>
        <%= f.label :email %>
      </div>

      <div class="form-floating mb-3">
        <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "current-password" %>
        <%= f.label :password %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="checkbox mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions d-flex align-items-content justify-content-center mb-3">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <div class="links text-center quicksand grey"><%= render "owners/shared/links" %></div>
  </div>
</div>
