<%= turbo_frame_tag "dashboard_locations_frame" do %>
  <% locations.each do |location| %>
    <div class="d-flex align-items-center">
      <div>
        <span class="d-block"><%= location.name %></span>
        <span class="d-block"><%= "#{location.unit}, #{location.address_line}" %></span>
      </div>
      <%= button_to "map icon", location_map_path(location), class: "rs-button", method: :get, data: { "turbo-frame": "location_map_frame" } %>
      <%= button_to "delete icon", location_path(location), class: "rs-button", method: :delete %>
    </div>
  <% end %>
<% end %>