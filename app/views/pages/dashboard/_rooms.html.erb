<%= turbo_frame_tag "dashboard_rooms_frame" do %>
  <% if @rooms.blank? %>
    <p class="quicksand heading-color text-center nothing" style="font-weight: 700px;">No rooms to display.</p>
  <% else %>
    <% rooms.each do |room| %>
      <div class="db-room d-flex align-items-center mb-3" id="<%= dom_id(room) %>">
        <%= link_to room_path(room), class: "w-75 text-decoration-none" do %>
          <h6 class="m-0 monsterrat heading-color semiBold"><%= room.name %></h6>
          <div class="d-flex align-items-center">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="#59657c" aria-hidden="true" style="width: 15px; height: 15px;">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
            </svg>
            <p class="db-subheading px-1 m-0"><%= room.location.name %></p>
          </div>
        <% end %>
        <div class="w-25 d-flex align-items-center justify-content-around">
          <%= button_to " ", edit_room_path(room), method: :get, class: "db-edit" %>
          <%= button_to " ", room_path(room), method: :delete, class: "db-delete", data: { "turbo-confirm": "Are you sure you want to delete this room?" } %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>