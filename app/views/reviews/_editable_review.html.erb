<%= turbo_frame_tag "room_review_frame" do %>
  <h5 class="monsterrat heading-color semiBold mb-3">Your review</h5>
  <%= render "reviews/review", review: review %>
  <%= button_to "Edit Review", edit_room_review_path(room, review), method: :get, class: "d-inline edit ms-4" %>
  <%= button_to "Delete Review", [room, review], method: :delete, class: "d-inline delete", data: { "turbo-confirm": "Are you sure you want to delete this review?" } %>
<% end %>