<div class="d-flex flex-row mb-3">
  <div><%= image_tag "https://api.dicebear.com/5.x/initials/svg?seed=#{review.occupant.name}&backgroundColor=3c529c&radius=50", style: "width: 40px; height: 40px;", class: "me-3" %></div>
  <div class="quicksand grey">
    <div class="bold" style="font-size: 16px;"><%= review.occupant.name %></div>
    <div class="d-flex star mb-3">
      <% 5.times do |n| %>
        <%= image_tag "star.svg", class: "#{n < review.rating ? "active" : "inactive" }" %>
      <% end %>
    </div>
    <p><%= review.updated_at.localtime.strftime("%B %d, %Y %H:%M") %></p> 
    <div class="semiBold"><%= review.title %></div>
    <p><%= review.comment %></p> 
  </div>
</div>