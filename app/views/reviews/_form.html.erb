<%= turbo_frame_tag "room_review_frame" do %>
  <%= form_with(model: [room, review]) do |f| %>
    <div class="rating">
      <%= f.collection_radio_buttons(:rating, [[5],[4],[3],[2],[1]], :first, :last) do |star| %>
        <%= star.radio_button %>
        <%= star.label class: "text-white" %>
      <% end %>
    </div>

    <div>
      <%= f.label :title, style: "display: block" %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :comment, style: "display: block" %>
      <%= f.text_area :comment %>
    </div>

    <div class="mt-3">
      <%= f.submit "Submit" %>
    </div>
  <% end %>

  <% if show_cancel_button %>
    <%= link_to "Cancel", room_path(room) %>
  <% end %>
<% end %>