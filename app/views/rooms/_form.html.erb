<%= form_with(model: room) do |f| %>

  <p>Location</p>

  <% unless current_owner.locations.blank? %>
    <p>Saved locations</p>
    <% current_owner.locations.each.with_index do |loc, index| %>
      <div class="form-check">
      <%= f.radio_button :location_id, loc.id, checked: index.zero?, class:"form-check-input" %>
      <%= f.label loc.name, class:"form-check-label"%>
      </div>
    <% end %>
  <% end %>

  <%= link_to "Add New", locations_new_path %>

  <p class="mt-3">Room Details</p>
  <div>
    <%= f.label :name, style: "display: block" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description, style: "display: block" %>
    <%= f.text_area :description, autofocus: true %>
  </div>

  <div>
    <%= f.label :rent, style: "display: block" %>
    <%= f.number_field :rent %>
  </div>

  <div>
    <%= f.label :capacity, style: "display: block" %>
    <%= f.number_field :capacity %>
  </div>

  <div>
    <%= f.label :vacancies, style: "display: block" %>
    <%= f.number_field :vacancies %>
  </div>

  <%= f.collection_check_boxes(:tags, @tags, :last, :first, include_hidden: false) do |box| %>
    <div class="form-check form-check-inline">
      <%= box.check_box class: "form-check-input" %>
      <%= box.label class: "form-check-label" %>
    </div>
  <% end %>

  <div>
    <%= f.submit %>
  </div>
<% end %>